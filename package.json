{
  "name": "cx",
  "private": true,
  "homepage": "./",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @cx/wfm run start",
    "start:rtd": "cd packages/rtd && yarn start",
    "build": "yarn workspace @cx/wfm run build",
    "storybook": "cd packages/components && yarn storybook",
    "test:all": "lerna run test",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "lint": "eslint '*/**/*.{ts,tsx}' --quiet",
    "lint:fix": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
    "e2e": "cd packages/puppeteer && jest",
    "e2e:single": "cd packages/puppeteer && jest -t 'zzz'"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:fix",
      "...": "..."
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@reduxjs/toolkit": "^1.5.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/luxon": "^1.26.5",
    "@types/material-ui": "^0.21.8",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-query": "^1.1.2",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-select": "^4.0.15",
    "@types/react-table": "^7.7.0",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^5.1.9",
    "axios": "^0.21.1",
    "luxon": "^1.26.0",
    "openapi-typescript": "^3.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.15.7",
    "react-query": "^3.15.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-select": "^4.3.0",
    "react-table": "^7.7.0",
    "styled-components": "^5.2.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-eslint": "^10.1.0",
    "customize-cra": "^1.0.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-redux-saga": "^1.2.1",
    "husky": "4",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8"
  }
}
